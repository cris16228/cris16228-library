<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:gravity="center"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/no_internet_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/no_internet_header"
                android:textColor="@color/colorText"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/no_internet_subtext"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--<com.google.android.material.button.MaterialButton
                    android:id="@+id/no_internet_open_settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:text="@string/settings"
                    android:textColor="@color/colorText"
                    app:backgroundTint="@color/colorSecondaryLight"
                    app:icon="@drawable/settings"
                    app:iconTint="@color/black_on_light_theme"/>-->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no_internet_turn_on_wifi_btn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/button_background"
                    android:text="@string/enable_mobile_data"
                    android:textColor="@color/colorText"
                    app:backgroundTint="@color/colorSecondaryLight"
                    app:icon="@drawable/mobile_data"
                    app:iconTint="@color/black_on_light_theme" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no_internet_turn_on_data_btn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/button_background"
                    android:text="@string/enable_wifi"
                    android:textColor="@color/colorText"
                    app:backgroundTint="@color/colorSecondaryLight"
                    app:icon="@drawable/wifi"
                    app:iconTint="@color/black_on_light_theme" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>